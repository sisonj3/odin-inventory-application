<!DOCTYPE html>
<html>

<body>
    <h1>Edit Item</h1>

    <form method="POST" action="/item/edit/<%= item.id %>">
        <div>
            <label for="itemName">Item Name</label>
            <input type="text" id="itemName" name="itemName" value="<%= item.name %>" required="required">
        </div>

        <div>
            <label for="category">Category</label>
            <select id="category" name="category" required="required">
                <% categories.map((category)=> { %>
                    <% if (item.typeid==category.id) { %>
                        <option selected value=<%=category.id %>><%= category.name %></option>
                    <% } else { %>
                        <option value=<%=category.id %>><%= category.name %></option>
                    <% } %>
                <% }) %>
            </select>
        </div>

        <div>
            <label for="price">Price (in USD)</label>
            <input type="number" id="price" name="price" value="<%= item.price %>" min="0" step="0.01"
                required="required">
        </div>

        <button type="submit">Submit</button>
    </form>
</body>

</html>