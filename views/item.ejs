<html>

<body>
    <h1>Items</h1>
    <ul>
        <% items.map((item) => { %>
            <li>
                <h2><%= item.name %></h2>
                <p>Category: <%= item.category %></p>
                <p>$<%= item.price %></p>
                <button onclick="location.href='/item/edit/<%= item.id %>'">Edit</button>
                <button onclick="location.href='/item/delete/<%= item.id %>'">Delete</button>
            </li>
        <% }) %>
    </ul>

    <button onclick="location.href='/item/new';">Add Item</button>
</body>

</html>